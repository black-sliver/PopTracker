{
    "$id": "https://poptracker.github.io/schema/packs/strict/mainfest.json",
    "allOf": [
        {
            "$ref": "../manifest.json"
        },
        {
            "properties": {
                "name": true,
                "package_uid": true,
                "package_version": true,
                "platform": true,
                "versions_url": true,
                "game_name": true,
                "author": true,
                "variants": {
                    "$comment": "Enforce known flags",
                    "description": "Variants for the pack. Property keys are the pack variant uids.",
                    "type": "object",
                    "patternProperties": {
                        "^$": {
                            "description": "A pack variant.",
                            "type": "object",
                            "properties": {
                                "display_name": {
                                    "description": "Display name of the pack variant.",
                                    "type": "string"
                                },
                                "flags": {
                                    "description": "Flags for the packs.",
                                    "type": "array",
                                    "items": {
                                        "description": "A flag.",
                                        "type": "string",
                                        "enum": [
                                            "ap",
                                            "hirom",
                                            "lorom",
                                            "uat"
                                        ]
                                    }
                                }
                            },
                            "additionalProperties": false,
                            "required": [
                                "display_name"
                            ]
                        },
                        "^.+$": {
                            "description": "A pack variant.",
                            "type": "object",
                            "properties": {
                                "display_name": {
                                    "description": "Display name of the pack variant.",
                                    "type": "string"
                                },
                                "flags": {
                                    "description": "Flags for the packs.",
                                    "type": "array",
                                    "items": {
                                        "description": "A flag.",
                                        "type": "string",
                                        "enum": [
                                            "ap",
                                            "hirom",
                                            "lorom",
                                            "uat"
                                        ]
                                    }
                                }
                            },
                            "additionalProperties": false
                        }
                    }
                }
            },
            "additionalProperties": false
        }
    ]
}
